<Desserts>
    <Dessert name="Rosogolla" region="West Bengal">
        <Ingredients>
            <Ingredient name="Milk"/>
            <Ingredient name="Lemon juice or vinegar"/>
            <Ingredient name="Water"/>
            <Ingredient name="Sugar"/>
            <Ingredient name="Cardamom powder" optional="true"/>
        </Ingredients>
        <Quantities serves="4">
            <Quantity ingredient="Milk" amount="1" unit="liter"/>
            <Quantity ingredient="Lemon juice or vinegar" amount="30" unit="ml"/>
            <Quantity ingredient="Water" amount="1" unit="liter"/>
            <Quantity ingredient="Sugar" amount="500" unit="g"/>
            <Quantity ingredient="Cardamom powder" amount="2" unit="g"/>
        </Quantities>
        <Instructions>
            <Step number="1">Bring milk to a boil, then add lemon juice or vinegar to curdle it.</Step>
            <Step number="2">Strain the curdled milk through a muslin cloth, rinse with water to remove the sourness, and squeeze out excess water to make chenna.</Step>
            <Step number="3">Knead the chenna until smooth, then divide it into small balls.</Step>
            <Step number="4">In a separate pot, boil water and sugar to make syrup.</Step>
            <Step number="5">Add the chenna balls to the boiling syrup and cook on medium heat for about 15 minutes.</Step>
            <Step number="6">Let them cool in the syrup before serving.</Step>
        </Instructions>
    </Dessert>
    <Dessert name="Mishti Doi" region="West Bengal">
        <Ingredients>
            <Ingredient name="Full-fat milk"/>
            <Ingredient name="Sugar"/>
            <Ingredient name="Yogurt"/>
        </Ingredients>
        <Quantities serves="4">
            <Quantity ingredient="Full-fat milk" amount="1" unit="liter"/>
            <Quantity ingredient="Sugar" amount="200" unit="g"/>
            <Quantity ingredient="Yogurt" amount="50" unit="g"/>
        </Quantities>
        <Instructions>
            <Step number="1">Boil milk until it reduces to half its volume.</Step>
            <Step number="2">In a pan, caramelize sugar until golden, then add to the boiling milk and mix well.</Step>
            <Step number="3">Let the milk cool until lukewarm, then add yogurt and mix.</Step>
            <Step number="4">Pour into earthen pots and allow to set overnight in a warm place.</Step>
        </Instructions>
    </Dessert>
